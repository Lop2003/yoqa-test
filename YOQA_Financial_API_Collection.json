              "query": [
                {
                  "key": "start_date",
                  "value": "2024-01-01"
                },
                {
                  "key": "end_date",
                  "value": "2024-12-31"
                }
              ]
            }
          }
        },
        {
          "name": "F005 - Get Income by Period (Daily)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/income/by-period?period_type=daily&year=2024&month=8",
              "host": ["{{base_url}}"],
              "path": ["income", "by-period"],
              "query": [
                {
                  "key": "period_type",
                  "value": "daily",
                  "description": "daily, monthly, yearly"
                },
                {
                  "key": "year",
                  "value": "2024"
                },
                {
                  "key": "month",
                  "value": "8"
                }
              ]
            }
          }
        },
        {
          "name": "F005 - Get Income by Period (Monthly)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/income/by-period?period_type=monthly&year=2024",
              "host": ["{{base_url}}"],
              "path": ["income", "by-period"],
              "query": [
                {
                  "key": "period_type",
                  "value": "monthly"
                },
                {
                  "key": "year",
                  "value": "2024"
                }
              ]
            }
          }
        },
        {
          "name": "Create Manual Income",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 5000,\n  \"description\": \"รายรับจากการสอนพิเศษ\",\n  \"income_type\": \"manual\",\n  \"income_date\": \"2024-08-08\",\n  \"payment_method\": \"cash\",\n  \"reference_number\": \"MANUAL001\",\n  \"notes\": \"รายรับเพิ่มเติมจากการสอนพิเศษ\",\n  \"category\": \"teaching\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/income/manual",
              "host": ["{{base_url}}"],
              "path": ["income", "manual"]
            }
          }
        },
        {
          "name": "Get All Income (No Date Filter)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/income?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["income"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "หน้าที่ต้องการ"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "จำนวนรายการต่อหน้า"
                }
              ]
            },
            "description": "ดูรายการรายรับทั้งหมด (ไม่กรองวันที่) - เรียงจากล่าสุดไปเก่าสุด"
          }
        },
        {
          "name": "Get All Income (With Filters)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/income?page=1&limit=10&start_date=2024-08-01&income_type=manual&search=สอน",
              "host": ["{{base_url}}"],
              "path": ["income"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "start_date",
                  "value": "2024-08-01",
                  "description": "Optional - วันที่เริ่มต้น"
                },
                {
                  "key": "end_date",
                  "value": "",
                  "description": "Optional - วันที่สิ้นสุด",
                  "disabled": true
                },
                {
                  "key": "income_type",
                  "value": "manual",
                  "description": "Optional - ประเภทรายรับ"
                },
                {
                  "key": "status",
                  "value": "",
                  "description": "Optional - สถานะ",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "สอน",
                  "description": "Optional - ค้นหา"
                }
              ]
            },
            "description": "ดูรายการรายรับพร้อมการกรอง"
          }
        },
        {
          "name": "Update Income",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 6000,\n  \"description\": \"รายรับจากการสอนพิเศษ (แก้ไข)\",\n  \"notes\": \"อัพเดทจำนวนเงิน\",\n  \"payment_method\": \"transfer\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/income/{{income_id}}",
              "host": ["{{base_url}}"],
              "path": ["income", "{{income_id}}"]
            }
          }
        }
      ]
    },
    {
