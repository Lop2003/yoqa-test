{
  "info": {
    "name": "YOQA Financial System API",
    "description": "API Collection สำหรับทดสอบระบบบัญชีการเงิน YOQA",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "your_jwt_token_here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Income Management",
      "item": [
        {
          "name": "F003 - Get Total Income by Period",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/income/total?start_date=2024-01-01&end_date=2024-12-31&income_type=package",
              "host": ["{{base_url}}"],
              "path": ["income", "total"],
              "query": [
                {
                  "key": "start_date",
                  "value": "2024-01-01",
                  "description": "วันที่เริ่มต้น (YYYY-MM-DD)"
                },
                {
                  "key": "end_date",
                  "value": "2024-12-31",
                  "description": "วันที่สิ้นสุด (YYYY-MM-DD)"
                },
                {
                  "key": "income_type",
                  "value": "package",
                  "description": "ประเภทรายรับ: package, goods, manual (optional)"
                }
              ]
            }
          }
        },
        {
          "name": "F004 - Get Income by Type",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/income/by-type?start_date=2024-01-01&end_date=2024-12-31",
              "host": ["{{base_url}}"],
