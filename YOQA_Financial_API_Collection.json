          "name": "Create Expense",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "multipart/form-data"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "amount",
                  "value": "2500",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "ค่าไฟฟ้าประจำเดือน",
                  "type": "text"
                },
                {
                  "key": "category",
                  "value": "utilities",
                  "type": "text"
                },
                {
                  "key": "expense_date",
                  "value": "2024-08-08",
                  "type": "text"
                },
                {
                  "key": "payment_method",
                  "value": "transfer",
                  "type": "text"
                },
                {
                  "key": "reference_number",
                  "value": "ELEC001",
                  "type": "text"
                },
                {
                  "key": "vendor_name",
                  "value": "การไฟฟ้านครหลวง",
                  "type": "text"
                },
                {
                  "key": "notes",
                  "value": "ค่าไฟฟ้าเดือนสิงหาคม 2024",
                  "type": "text"
                },
                {
                  "key": "receipt",
                  "type": "file",
                  "description": "ไฟล์ใบเสร็จ (jpg, png, pdf)"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/expenses",
              "host": ["{{base_url}}"],
              "path": ["expenses"]
            }
          }
        },
        {
          "name": "Get All Expenses",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/expenses?page=1&limit=10&category=utilities&status=pending",
              "host": ["{{base_url}}"],
              "path": ["expenses"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "category",
                  "value": "utilities"
                },
                {
                  "key": "status",
                  "value": "pending"
                }
              ]
            }
          }
        },
        {
          "name": "Approve Expense",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"approval_notes\": \"อนุมัติการจ่ายค่าไฟฟ้า\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/expenses/{{expense_id}}/approve",
              "host": ["{{base_url}}"],
              "path": ["expenses", "{{expense_id}}", "approve"]
            }
          }
        },
        {
          "name": "Reject Expense",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"approval_notes\": \"ไม่อนุมัติ - ใบเสร็จไม่ชัดเจน\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/expenses/{{expense_id}}/reject",
              "host": ["{{base_url}}"],
              "path": ["expenses", "{{expense_id}}", "reject"]
            }
          }
        },
